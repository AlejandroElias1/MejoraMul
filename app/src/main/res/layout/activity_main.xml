<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/continuar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="38dp"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ladron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="96dp"
        android:text="Ladron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clerigo"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/guerrero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="37dp"
        android:text="Guerrero"
        app:layout_constraintBottom_toTopOf="@+id/ladron"
        app:layout_constraintEnd_toStartOf="@+id/mago"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="34dp"
        android:text="Mago"
        app:layout_constraintBottom_toTopOf="@+id/clerigo"
        app:layout_constraintStart_toEndOf="@+id/guerrero" />

    <Button
        android:id="@+id/clerigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginBottom="96dp"
        android:text="Clerigo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ladron" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="236dp"
        android:layout_height="203dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toTopOf="@+id/guerrero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondoblanco" />

</androidx.constraintlayout.widget.ConstraintLayout>